CREATE DATABASE Cinema;

use Cinema;

CREATE TABLE cinema (
	id int primary key auto_increment,
    nome_filme text,
    diretor text,
    ano_lancamento int not null,
    genero text not null,
    duracao_minutos int not null
);

insert into cinema
values(null, 'walfredo o grande' , 'John marston', 2012, 'Ação', 143),
(null, 'Acionista mafioso', 'Jack will', 2017, 'suspense', 118),
(null, 'O mágico', 'Ana carla', 1998, 'drama', 103),
(null, 'Grande Leão', 'James Java', 2009, 'aventura', 123),
(null, 'A clara de ovo', 'Pedro Python', 1993, 'ação', 112);


SELECT * FROM cinema;

insert into cinema
values(null, 'Matrix', 'James webb', 2010, 'Ficção Científica', 125);

UPDATE cinema SET duracao_minutos = 150
WHERE id = 6;

ALTER TABLE cinema 
ADD COLUMN avaliacao decimal (3,1);

insert into cinema
values(null, 'O poderoso chefão', 'Jack will', 2000, 'suspense', 115, 8.1);

update cinema SET avaliacao = 9.2
WHERE id = 8;

SELECT * FROM cinema
WHERE genero = 'Ficção Científica';

SELECT * FROM cinema
ORDER BY ano_lancamento desc;

insert into cinema
values(null, 'A Origem', 'Pedro pascal', 2011, 'suspense', 122, 8.5);

DELETE FROM cinema
WHERE id = 7;

DROP TABLE cinema;
